@model IEnumerable<MVC_CRUD.Models.Employee>
@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-12 p-2">
        <div class="card-border-info">
            <div class="card-header">
                <div class="card-title">Employee List</div>
                <h6 class="card-subtitle d-flex justify-content-between text-muted">
                    Manage Employee                 
                    <a href="@Url.Action("Create", "Home")" class="btn btn-primary d-flex justify-content-end"><i class="fa fa-plus"></i></a>
                </h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped table-sm">
                    <thead class="table-info">
                        <tr>
                            <th>@Html.DisplayNameFor(x=>x.Id)</th>
                            <th>@Html.DisplayNameFor(x=>x.Name)</th>
                            <th>@Html.DisplayNameFor(x=>x.Grade)</th>
                            <th>@Html.DisplayNameFor(x=>x.Department)</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(x=>item.Id)</td>
                                <td>@Html.DisplayFor(x=>item.Name)</td>
                                <td>@Html.DisplayFor(x=>item.Grade)</td>
                                <td>@Html.DisplayFor(x=>item.Department)</td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new {id = })*@
                                    <a href="@Url.Action("Edit","Home", new {id = item.Id})" class=" btn btn-info"> <i class="fa fa-edit"></i> </a>
                                    <a href="@Url.Action("Delete","Home")" class=" btn btn-danger"> <i class="fa fa-trash"></i> </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                @Model.Count() Employees Found
            </div>
        </div>

    </div>
</div>
